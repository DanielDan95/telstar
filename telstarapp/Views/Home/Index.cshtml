@model telstarapp.Models.User

<section class="vh-100" style="background-color: #fef2099c;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        @using (Html.BeginForm("loginsubmit", "Home", FormMethod.Post))
                        {
                            <h3 class="mb-5">Sign in</h3>
                            <img src="~/Resources/TelstarLogo.PNG"/>
                            <div class="form-outline mb-4">
                                @Html.TextBoxFor(a => a.Email, new {@class = "form-control form-control-lg"})
                                <label class="form-label" for="typeEmailX-2">Email</label>
                            </div>

                            <div class="form-outline mb-4">
                                @Html.TextBoxFor(a => a.Password, new {@class = "form-control form-control-lg"})
                                <label class="form-label" for="typePasswordX-2">Password</label>
                            </div>

                            <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>