@model telstarapp.Models.User

<section>
    <div>
        <div>
            <div>
                <div>
                    <div class="">
                        @using (Html.BeginForm("loginsubmit", "Home", FormMethod.Post))
                        {
                            <br />
                            <br />
                            <img src="~/Resources/TelstarLogo.PNG" class="center-block" />
                            <br />
                            <br />
                            <br />
                            <div>
                                <label class="form-label center-block" for="typeEmailX-2">Email</label>
                                @Html.TextBoxFor(a => a.Email, new { @class = "form-input", @type = "email" })
                            </div>
                            <br />
                            <div>
                                <label class="form-label center-block" for="typePasswordX-2">Password</label>
                                @Html.TextBoxFor(a => a.Password, new { @class = "form-input", @type = "password" })
                            </div>
                            <br />
                            <br />
                            <button class="btn btn-lg center-block" type="submit">Login</button>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>