<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Telstar Logistics</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (Session["UserID"] != null)
    {
        <div class="float-container">
            <span class="float-nav navbar-inverse">
                <img src="~/Resources/TelstarLogo.PNG" class="logoIcon" />
                <br />
                <br />
                <span>
                    <span class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "mainPage", "Home")</li>
                            <li>@Html.ActionLink("History", "History", "Home")</li>
                        </ul>

                    </span>

                </span>
            </span>

            <div class="float-child">
                <input class="btn btn-logout" , type="button" value="Logout" onclick="location.href = '@Url.Action("logOut", "Home")'" />
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>
            </div>
        </div>
        
    }
    else
    {
        <div>
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
